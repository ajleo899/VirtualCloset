<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="429dp"
        android:layout_marginTop="100dp"
        android:gravity="center|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/shirtTemplate"
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:srcCompat="@drawable/ic_shirttemplate"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/pantsTemplate"
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:adjustViewBounds="false"
            app:srcCompat="@drawable/ic_pantstemplate" />

        <ImageView
            android:id="@+id/shoesTemplate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cropToPadding="false"
            app:srcCompat="@drawable/ic_shoestemplate" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addClothing"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_input_add" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/goToListCloset"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:src="@drawable/ic_menuicon" />


</RelativeLayout>